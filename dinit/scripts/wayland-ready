#!/bin/sh
dinitctl setenv DISPLAY WAYLAND_DISPLAY XDG_BACKEND XDG_CURRENT_DESKTOP XDG_SESSION_TYPE XDG_SESSION_ID XDG_SESSION_CLASS XDG_SEAT HYPRLAND_INSTANCE_SIGNATURE
dbus-update-activation-environment DISPLAY WAYLAND_DISPLAY XDG_BACKEND XDG_CURRENT_DESKTOP XDG_SESSION_TYPE XDG_SESSION_ID XDG_SESSION_CLASS XDG_SEAT HYPRLAND_INSTANCE_SIGNATURE
echo 1 >&"$DINIT_READYFD"
