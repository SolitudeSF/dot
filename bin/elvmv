#!/usr/bin/env elvish

use path

fn list-items [a]{
  if (path:is-dir $a) { put $a/* } else { put $a }
}

items = []

if (== (count $args) 0) {
  items = [./*]
} else {
  for i $args {
    if (eq $i '-') {
      each [x]{ items = [$@items (list-items $x)] }
    } else {
      items = [$@items (list-items $i)]
    }
  }
}

file = (mktemp -p /tmp elvmvXXXXX)
print > $file

for i $items {
  echo $i >> $file
}

editor = vi
if (has-env VISUAL) {
  editor = $E:VISUAL
} elif (has-env EDITOR) {
  editor = $E:EDITOR
}

fn abort [&code=1 a]{
  echo $a >&2
  rm $file
  exit $code
}

try {
  (external $editor) $file
} except {
  abort 'Editor exited with error. Aborting...'
}

i = 0
cat $file | each [l]{
  if (eq $l '') {
    rm $items[$i]
  } elif (not-eq $l $items[$i]) {
    mkdir -p (path:dir $l)
    mv $items[$i] $l
  }
  i = (+ $i 1)
}

rm $file
